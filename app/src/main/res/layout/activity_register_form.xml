<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="event.apps.Login.registerForm">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/back_profile"
            android:id="@+id/imageView4" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:text="Register Form"
                android:textAlignment="center"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="98dp"
                tools:layout_editor_absoluteY="40dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textView"
                    android:layout_alignRight="@+id/textView"
                    android:layout_below="@+id/textView"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:ems="10"
                    android:hint="your name"
                    android:inputType="textPersonName"
                    tools:layout_editor_absoluteX="52dp"
                    tools:layout_editor_absoluteY="92dp" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:ems="10"
                    android:hint="username"
                    android:inputType="textPersonName"
                    tools:layout_editor_absoluteX="52dp"
                    tools:layout_editor_absoluteY="155dp" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/emailuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_above="@+id/button2"
                    android:layout_alignLeft="@+id/numberPhone"
                    android:layout_alignStart="@+id/numberPhone"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textPersonName"
                    tools:layout_editor_absoluteX="52dp"
                    tools:layout_editor_absoluteY="272dp" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/numberPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_above="@+id/emailuser"
                    android:layout_alignLeft="@+id/name"
                    android:layout_alignStart="@+id/name"
                    android:layout_marginBottom="19dp"
                    android:ems="10"
                    android:hint="Number Phone"
                    android:inputType="textPersonName"
                    tools:layout_editor_absoluteX="52dp"
                    tools:layout_editor_absoluteY="334dp" />


            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:padding="20dp"
                android:text="Register"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="normal"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="447dp"
                android:onClick="regg"/>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>