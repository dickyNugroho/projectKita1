<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_tiket_detailtiket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="event.apps.tiket.tiket_detailtiket"
    tools:showIn="@layout/activity_tiket_detailtiket">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:text="SEMNASTI 2017"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="7pt"
            android:textColor="@color/black"
            android:id="@+id/det_judul" />

        <TextView
            android:text='"Rise Your Imagination With AR and VR"'
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/det_subjudul" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_profile"
                android:id="@+id/img"
                android:tint="@color/red" />

            <TextView
                android:text="HMTI-UDINUS"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:id="@+id/det_instansi"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1" />

            <TextView
                android:text="Rp. 60000 ,-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/det_harga"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:text="Harits Nala Barrun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/nama" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:layout_weight="1"
            android:weightSum="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:id="@+id/imageQR"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/qr_image_description"
                 />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:text="Event Dimulai"
                android:layout_width="match_parent"
                android:textColor="@color/red"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />

            <TextView
                android:text="27 FEBRUARI 2017"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#3688EE"
                android:textSize="10pt"
                android:textAlignment="center"
                android:textStyle="bold"
                android:id="@+id/tanggal" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
